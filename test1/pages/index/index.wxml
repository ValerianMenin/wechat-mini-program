
<!--index.wxml-->
<view class="container">
  <view bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>

  <view>
    <button bindtap="updateText">{{buttonRefreshText}}</button>
    <button bindtap="buttonCalc">{{buttonCalcText}}</button>

    <!--form action="where-you-want-to-go"><input type="submit"></form-->
  </view>

  <view class="usermotto">
    <text class="user-motto">{{helloText}}</text>
  </view>

  <!-- TODO mettre le picker dans un menu d'options -->
  <view class="section">
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
      <view class="picker">
        {{languageText}}ï¼š{{array[index]}}
      </view>
    </picker>
  </view>
 
  <contact-button type="default-light" size="20" session-from="weapp">test
  </contact-button>
</view>